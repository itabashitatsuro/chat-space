.wrapper__side-bar
  .side-header
    .side-header-space 
      .user-name 
        = current_user.name
      .menu__new-group
        = link_to new_group_path, class: "menu__btn, menu__btn--edit" do
          = icon('fab', 'edit', class: "menu__btn--icon")
        = link_to edit_user_path(current_user), class: "menu__btn, menu__btn--cog" do
          = icon('fas', 'cog', class: "menu__btn--icon")
  .side-box
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message
