.contents__side-bar
  .side-hedear
    .side-header-space 
      .user-name 
        = current_user.name
      .menu__new-group
        = link_to new_group_path, class: "menu__btn, menu__btn--edit" do
          = icon('fab', 'edit', class: "menu__btn--icon")
        = link_to edit_user_path(current_user), class: "menu__btn, menu__btn--cog" do
          = icon('fas', 'cog', class: "menu__btn--icon")
  .side-box
    - current_user.groups.each do |group|
      .side-box
        = link_to '#' do
          .side-box__name
            = group.name
          .side-box__message
            メッセージはまだありません
